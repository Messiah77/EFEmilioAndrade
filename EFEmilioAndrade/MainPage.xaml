<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EFEmilioAndrade.MainPage">

    <StackLayout>
        <Label Text="Lista de satelites" FontSize="Title" Padding="30,10,30,10"/>
        <Button Text="Llamar API" Clicked="Button_Clicked" />
        <ListView x:Name="ListaDemo">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}"  Detail="{Binding id}"
                              />
                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>
    </StackLayout>

</ContentPage>
